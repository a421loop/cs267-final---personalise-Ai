    <script>
        // Timer functionality
        function startTimer(duration, display) {
            let timer = duration, minutes, seconds;
            const interval = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    clearInterval(interval);
                    display.textContent = "Time's up!";
                }
            }, 1000);
        }

        // Start the timer when the page loads
        window.onload = function () {
            const fiveMinutes = 60 * 5;
            const display = document.querySelector('#timer');
            startTimer(fiveMinutes, display);
        };

        // Toggle hint visibility
        function toggleHint() {
            const hintContent = document.getElementById('hint1-content');
            if (hintContent.style.display === 'block') {
                hintContent.style.display = 'none';
            } else {
                hintContent.style.display = 'block';
            }
        }

        // Check solution functionality
        document.getElementById('check-solution').addEventListener('click', function() {
            const solutionInput = document.getElementById('solution-input').value.trim();
            const spinner = document.getElementById('spinner');
            
            // Show spinner
            spinner.classList.add('active');
            
            // Disable button temporarily
            this.disabled = true;
            
            // Simulate checking (wait 1.5 seconds)
            setTimeout(() => {
                // Hide spinner
                spinner.classList.remove('active');
                
                // Re-enable button
                this.disabled = false;
                
                // Show the modal
                document.getElementById('solution-modal').classList.add('active');
                
                // Check if solution contains key terms
                const correctAnswer = solutionInput.toLowerCase().includes('3x¬≤') || 
                                      solutionInput.toLowerCase().includes('3x^2') || 
                                      solutionInput.toLowerCase().includes('4x') || 
                                      solutionInput.toLowerCase().includes('- 4');
                
                // Set modal content based on correctness
                if (correctAnswer) {
                    document.querySelector('.modal-title').textContent = "Correct!";
                    document.querySelector('.modal-message').textContent = "Here's some validation! üëèüéä";
                    document.querySelector('.modal-icon').style.backgroundColor = "#4caf50";
                } else {
                    document.querySelector('.modal-title').textContent = "Try Again";
                    document.querySelector('.modal-message').textContent = "Maybe the question is wrong and you're right. Review the power rule and try again.";
                    document.querySelector('.modal-icon').style.backgroundColor = "#f44336";
                    document.querySelector('.modal-icon').innerHTML = '<svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>';
                }
            }, 1500);
        });

        // Close the modal
        function closeModal() {
            document.getElementById('solution-modal').classList.remove('active');
        }

        // Open Desmos calculator
        document.getElementById('calculator-btn').addEventListener('click', function() {
            window.open('https://ti84calc.com/ti84calc', '_blank');
        });
    </script>
